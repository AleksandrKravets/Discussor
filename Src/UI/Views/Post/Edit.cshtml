@model Discussor.Core.Application.Posts.Commands.UpdatePost.UpdatePostCommand


<div class="container">
    <h1>Edit post</h1>

    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Title"></label><br />
            <input asp-for="Title" class="form-control" placeholder="Title">
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Content"></label><br />
            <textarea rows="7" asp-for="Content" class="form-control"></textarea>
            <span asp-validation-for="Content"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-bottom:50px">Edit</button>
        <input asp-for="ThemeId" type="hidden" />
        <input asp-for="PostId" type="hidden" />
    </form>
</div>
