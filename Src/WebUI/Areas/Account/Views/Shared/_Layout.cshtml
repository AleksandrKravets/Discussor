<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Daily English</title>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navigation">
            <a class="navbar-brand site-title" href="#" style="margin-left: 15px;">Discussor</a>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav mr-auto">
                </ul>
                <div class="navbar-text">
                    <div class="login-panel">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="nav-link text-white"><span>Hi, @User.Identity.Name ;)</span></div>
                            <div class="login-panel-btn" style="margin-left: 20px; margin-right: 15px;">
                                <a class="nav-link text-white" asp-action="LogOut" asp-controller="Account" asp-area="Account">Log Out</a>
                            </div>
                        } else
                        {
                            <div class="login-panel-btn">
                                <a class="nav-link text-white" asp-action="Login" asp-controller="Account" asp-area="Account">Log In</a>
                            </div>
                            <div class="login-panel-btn" style="margin-left: 20px; margin-right: 15px;">
                                <a class="nav-link text-white" asp-action="Register" asp-controller="Account" asp-area="Account">Sign Up</a>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </nav>
    </header>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navigation">
            <a class="navbar-brand" href="#" style="margin-left: 15px;">Discussor</a>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Something</a>
                    </li>
                </ul>
                <div class="navbar-text">
                    <div class="login-panel">
                        

                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div>
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)

</body>
</html>
