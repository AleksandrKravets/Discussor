@model Discussor.Core.Application.Posts.Commands.CreatePost.CreatePostCommand

<style>
    .create-theme-form {
        width: 50%;
    }

    .image-input {
        margin-left: 50px;
    }
</style>

<div class="container create-theme-form text-light">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Title</label>
            <input asp-for="Title" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label>Content</label>
            <textarea asp-for="Content "rows="7" type="text" class="form-control"></textarea>
        </div>
        <input type="hidden" asp-for="ThemeId"/>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>