@model Discussor.Core.Application.Posts.Queries.GetPost.PostViewModel

<style>

    .postsContainer {
        max-width: 55%;
        margin-bottom: 30px;
    }

    .post {
        background: rgba(194,210,233,0.3);
        border: 1px solid;
        border-radius: 10px;
        padding: 15px;
    }

    .postDate {
        text-align: right;
    }

    .postAuthor {
        text-align: right;
        padding-right: 20px;
        font-weight: bold;
    }

    .postContent {
        padding: 20px;
    }

    .postTitle {
        font-weight: bold;
    }

    .repliesContainer {
        max-width: 40%;
    }

    .reply {
        background: rgba(194,210,233,0.3);
        border: 1px solid;
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 25px;
    }

    .replyAuthor {
        text-align: left;
        padding-left: 20px;
        font-weight: bold;
    }

    .replyContent {
        padding: 20px;
    }

    .replyDate {
        text-align: right;
    }

    .btnContainer {
        max-width: 55%;
        margin-bottom: 30px;
    }

    .messageContainer {
        max-width: 40%;
        text-align: center;
    }
</style>


