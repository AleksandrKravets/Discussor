@model Discussor.WebUI.Models.CreateThemeViewModel

<style>
    .create-theme-form {
        width: 50%;
    }

    .image-input {
        margin-left: 50px;
    }
</style>

<div class="container create-theme-form text-light">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Title</label>
            <input asp-for="Title" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label>Image</label>
            <input class="image-input" asp-for="Image" type="file">
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>